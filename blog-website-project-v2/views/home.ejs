<%- include("./partials/header"); -%>

<h1>Home Page</h1>
<p><%= homContent %></p>

<% postContent.forEach(function(i) {  %>
    <h2> <%= i.title %> </h2>

    <% if (i.body.length === 100) { %>
        <p> <%= i.body %> </p>
    <% } else { %>
        <p> <%= i.body.substring(0, 101) + " ..."; %> <a href="./post/<%=i.title%>">Read more</a></p>
    <% } %>
    
<% }) %>

<%- include("./partials/footer"); -%>