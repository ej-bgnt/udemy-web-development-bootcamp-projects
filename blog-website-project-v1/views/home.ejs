<%- include("./partials/header"); -%>

<h1>Home Page</h1>
<p><%= homContent %></p>

<% postContent.forEach(function(post) {  %>
    <h2> <%= post.postTitle %> </h2>

    <% if (post.postBody.length === 100) { %>
        <p> <%= post.postBody %> </p>
    <% } else { %>
        <p> <%= post.postBody.substring(0, 101) + " ..."; %> <a href="./post/<%=post.postTitle%>">Read more</a></p>
    <% } %>
    
<% }) %>

<%- include("./partials/footer"); -%>