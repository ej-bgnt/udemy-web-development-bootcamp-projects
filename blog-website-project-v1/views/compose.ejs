<%- include ("./partials/header"); -%>

<h1>Compose Page</h1>
<form class="" action="/compose" method="post">
    <div class="form-group">
        <label for="titleForm">Title</label>
        <input id="titleForm" class="form-control" type="text" name="newTitle" placeholder="type here..." autocomplete="off"/>
        <label for="postForm">Post</label>
        <textarea id="postForm" class="form-control" type="text" name="newBody" rows="5" cols="30"> </textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="btn" value="">Publish</button>
</form>
<%- include ("./partials/footer"); -%>